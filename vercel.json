{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
              "config": {
                "maxLambdaSize": "50mb",
                "runtime": "python3.9"
              }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "installCommand": "pip install -r api/requirements.txt && npm install",
  "buildCommand": "npm run vercel-build"
}
